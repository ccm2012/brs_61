<% comments.each do |comment| %>
  <div class="col-md-11 col-md-offset-1" id="comment-<%= comment.id %>">
    <% if current_user.equal_user? comment.user %>
      <li class="dropdown comment-edit">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <span class="fa fa-pencil color-black"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to t("book_for.edit"),
              edit_review_comment_path(comment.review, comment),
              remote: true %></li>
            <li><%= link_to t("book_for.delete"),
              review_comment_path(comment.review, comment) ,method: :delete,
              data: {confirm: t("user_for.confirm")} %></li>
          </ul>
        </li>
    <% end %>
    <%= link_to gravatar_for(comment.user, 50), comment.user %>
    <div class="comment-info">
      <%= link_to comment.user.name, comment.user %></br>
      <p class="time-review"><%= comment.updated_at.to_s :short %></p>
    </div>
    <div class="row comment-content">
      </br>
      <span class="more"><%= comment.content %></span>
      </br>
      <% if comment.picture? %>
        <%= image_tag(comment.picture.url, size: "200x200",
          class: "comment-image") %></br>
      <% end %>
    </div>
  </div>
<% end %>
