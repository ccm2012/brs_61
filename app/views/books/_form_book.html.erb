<%= form_for book do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label t("book_for.label_category") %>
  <%= f.select :category_id, result, selected: f.object.category_id %>
  </br>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :author %>
  <%= f.text_field :author, class: "form-control" %>
  </br>
  <%= f.label :date_published %>
  <%= f.datetime_select :date_published, class: "form-control" %>
  </br>
  </br>
  <%= f.text_area :summary, placeholder: t("book_for.holder_summary"),
    class: "form-control" %>
  </br>
  <%= f.text_area :description, placeholder: t("book_for.holder_descrip"),
    class: "form-control" %>
  </br>
  <%= f.text_area :content, placeholder: t("book_for.holder_content"),
    class: "form-control" %>
  </br>
  <%= f.label :price %>
  <%= f.number_field :price, class: "form-control" %>
  </br>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
  </span>
  </br>
  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block" %>
<% end %>
