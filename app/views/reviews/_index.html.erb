<div>
  <% reviews.each do |review| %>
    <div id="review-<%= review.id %>">
      <% if current_user.equal_user? review.user %>
        <li class="dropdown review-edit">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <span class="btn fa fa-pencil color-black"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to t("book_for.edit"), edit_review_path(review),
                remote: true %></li>
              <li><%= link_to t("book_for.delete"), review ,method: :delete,
                data: {confirm: t("user_for.confirm")} %></li>
            </ul>
          </li>
      <% end %>
      <%= link_to gravatar_for(review.user, 80), review.user %>
      <div class="review-info">
        <%= link_to review.user.name, review.user, class: "reviewer" %></br>
        <p><strong><%= t "book_for.rate", param: review.rate %></strong></p>
        <p class="time-review"><%= review.updated_at.to_s :short %></p>
      </div>
      <div class="row">
        <% if review.picture? %>
        <div class="col-sm-3">
          <%= image_tag(review.picture.url, class: "review-image") %></br>
        </div>
        <div class="col-sm-8 review-content">
        <% else %>
          <div class="col-sm-10 review-content">
        <% end %>
          <span class="more"><%= review.content %></span>
        </div>
      </div>
      <div class="review container button-comment">
        <div class="col-md-10">
          <%= link_to t("review_for.like"), t("none"),
            class: "btn-default btn like-review" %>
          <%= link_to t("review_for.comment"), new_review_comment_path(
            review_id: review), id: "new-comment-#{review.id}",
            remote: true, class: "btn-default btn" %>
          <%= link_to t("review_for.detail"), review,
            class: "btn button-detail active" %>
        </div>
        <div class="col-md-4">
          <a class="comment-button show-comment" data-id="<%= review.id %>">
            <%= t "review_for.show_like", param: review.comments.count %>
          </a>
        </div>
      </div>
      <% if review.comments.any? %>
        <div class="comment-show-<%= review.id %> collapse">
          <%= render "comments/index", comments: review.comments.set_order %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
